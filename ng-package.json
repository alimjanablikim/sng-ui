{
  "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
  "dest": "dist/sng-ui",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "input": "cli",
      "glob": "**/*",
      "ignore": [
        "**/*.spec.cjs"
      ],
      "output": "cli"
    },
    "registry.json",
    "LICENSE",
    {
      "input": "src/lib",
      "glob": "**/*.ts",
      "ignore": [
        "**/*.spec.ts",
        "**/*.stories.ts"
      ],
      "output": "src/lib"
    },
    "src/lib/styles/**/*.css"
  ]
}
